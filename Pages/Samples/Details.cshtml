@page "{sampleId}"
@model Lingo.Pages.Samples.DetailsModel

<div class="row">
    <!-- Essay -->
    <div class="col-md-8">
        @if (Model.Sample != null)
        {
            <div class="row">
                <a class="btn btn-secondary mx-1" asp-page="./Index" asp-route-language="@Model.Language" asp-route-category="@Model.Category" asp-route-query="@Model.Query">Back</a>
                <a class="btn btn-primary mx-1" asp-page="./Edit" asp-route-sampleId="@Model.Sample.SampleId">Edit</a>
                <form asp-page-handler="delete" asp-route-sampleId="@Model.Sample.SampleId" method="post">
                    <button class="btn btn-danger mx-1">Delete</button>
                </form>
            </div>  
        }
        <h3 class="mt-3">@Model.Sample.Title</h3> 
        <div>
            <span>@Model.Sample.SampleId</span> |
            <span>@Model.Sample.Category</span> |
            <span>@Model.Sample.Language</span> |
            <span>@Model.Sample.Source</span> |
            @*<span>@Model.Sample.Created.Value.ToString("dd MMM yyyy")</span>
        </div>*@
        <div class="border mt-2 p-2">
           <span id="text">@Html.Raw(@Model.Sample.Text)</span>
        </div>
    </div> 
</div>




