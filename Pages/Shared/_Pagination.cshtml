<div>
    <form method="get">
        <ul class="pagination">

            @if (Model.ShowFirst)
            {
                <li class="page-item">
                    <a href="?Language=@Model.Language&Category=@Model.Category&CurrentPage=1" class="page-link">&lt;&lt;</a>
                </li>
            }

            @if (Model.ShowPrevious)
            {
                <li class="page-item">
                    <a href="?Language=@Model.Language&Category=@Model.Category&CurrentPage=@(Model.CurrentPage -1)" class="page-link">&lt;</a>
                </li>
            }
            @foreach(var p in Model.PageRange)
            {
                @if(p > 0 && p <= Model.TotalPages){
                    <li class="page-item @(p == Model.CurrentPage ? "active" : "")">
                    <a href="?Language=@Model.Language&Category=@Model.Category&CurrentPage=@p" class="page-link">@p</a>
                    </li>
                }
            }
            
            <input class="mx-2" size="5" name="CurrentPage" onblur="this.form.submit()" />

            @if (Model.ShowNext)
            {
                <li class="page-item">
                    <a href="?Language=@Model.Language&Category=@Model.Category&CurrentPage=@(Model.CurrentPage + 1)" class="page-link">></a>
                </li>
            }

            @if (Model.ShowLast)
            {
                <li class="page-item">
                    <a href="?Language=@Model.Language&Category=@Model.Category&CurrentPage=@Model.TotalPages" class="page-link">>></a>
                </li>
            }
             <li class="mx-2 page-item"> Total : <span>@Model.TotalPages</span></li>
        </ul>
    </form>
</div>