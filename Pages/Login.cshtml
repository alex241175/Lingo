@page
@model LoginModel
@{
    ViewData["Title"] = "Login";
}
<div class="row">
    <div class="col-md-4">
        <h3 class="title mb-4">Log In</h3>
        <form method="post">
            <div class="form-group">
                <label for="username">User Name</label>
                <input class="form-control" type="text" id="username" asp-for="UserName" required><br>
            </div>
            <div class="form-group">
                <label for="pwd">Password</label>
                <input class="form-control" type="password" id="pwd" asp-for="Password" required><br>
            </div>
            <div class="form-group">
                <label>
                    <input type="checkbox" asp-for="RememberMe"> Remember me
                </label>
            </div>
            <button class="btn btn-dark" type="submit">Log in</button>
         
        </form>
    </div>
</div>
 