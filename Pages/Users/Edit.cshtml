@page "{userId}"
@model Lingo.Pages.Users.EditModel
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<form method="post">
    <input type="hidden" asp-for="@Model.User.UserId" />
    <div class="form-group">
        <label asp-for="@Model.User.UserName"></label><br/>
        <input class="form-control" asp-for="@Model.User.UserName" /><br/>
        <span class="font-weight-bold text-danger" asp-validation-for="@Model.User.UserName"></span>
    </div>        
    <div class="form-group">
        <label asp-for="@Model.User.Email"></label><br/>
        <textarea class="form-control" asp-for="@Model.User.Email"></textarea><br/>
        <span class="font-weight-bold text-danger" asp-validation-for="@Model.User.Email"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.User.Password"></label><br/>
        <textarea class="form-control" asp-for="@Model.User.Password"></textarea><br/>
        <span class="font-weight-bold text-danger" asp-validation-for="@Model.User.Password"></span>
    </div>
    <input class="btn btn-danger" type="submit" value="Update" />
</form>