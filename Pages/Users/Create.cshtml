@page
@model Lingo.Pages.Users.CreateModel
@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="@Model.User.UserName"></label>
        <input class="form-control" asp-for="@Model.User.UserName" />
        <span class="font-weight-bold text-danger" asp-validation-for="@Model.User.UserName"></span>
    </div>        
    <div class="form-group">
        <label asp-for="@Model.User.Email"></label>
        <input class="form-control" asp-for="@Model.User.Email" />
        <span class="font-weight-bold text-danger" asp-validation-for="@Model.User.Email"></span>
    </div>
     <div class="form-group">
        <label asp-for="@Model.User.Password"></label>
        <input class="form-control" asp-for="@Model.User.Password" />
        <span class="font-weight-bold text-danger" asp-validation-for="@Model.User.Password"></span>
    </div>
    <input class="btn btn-primary" type="submit" value="Create" />
</form>